<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/FrameLayout"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useThreeLetterAbbrevCheckBox"
                android:layout_gravity="right|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useThreeLetterAbbrevTextView"
                android:layout_gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="false"
                android:singleLine="true"
                android:text="@string/use_three_letter_abbrev" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showMondayAsFirstDayTextView"
                android:layout_gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="false"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="@string/show_monday_as_first_day" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showMondayAsFirstDayCheckBox"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

    </FrameLayout>

</FrameLayout>