<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp"
    android:gravity="center">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/stageReadyLogoImageView"
            android:layout_gravity="left|center_vertical"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@mipmap/stage_ready_icon"
            android:contentDescription="@string/stage_ready_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stageReadyTextView"
            android:layout_gravity="right|center_vertical"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/app_name" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_1_0"
        android:id="@+id/versionTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anAppByTextView"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:layout_marginBottom="10dp"
        android:text="@string/an_app_by" />

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metafire"
            android:id="@+id/metafireTextView"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/metafireLogoImageView"
            android:layout_gravity="right|center_vertical"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@drawable/metafire_logo"
            android:contentDescription="@string/metafire_logo" />

    </FrameLayout>

</LinearLayout>