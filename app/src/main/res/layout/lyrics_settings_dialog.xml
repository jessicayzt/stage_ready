<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:id="@+id/FrameLayout"
        android:layout_gravity="center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useLargeTextSizeTextView"
                android:layout_gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="false"
                android:singleLine="true"
                android:text="@string/use_large_text_size" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useLargeTextSizeCheckBox"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alignLyricsToCentreTextView"
                android:layout_gravity="left|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="false"
                android:singleLine="true"
                android:text="@string/align_lyrics_to_centre" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/alignLyricsToCentreCheckBox" />

        </FrameLayout>

    </FrameLayout>

</FrameLayout>